{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@": ["src/index"],
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true
  }
}
