{
  "extends": "./tsconfig.build.json",
  "include": ["dist-dev/**/*.ts", "*.ts"],
  "compilerOptions": {
    "outDir": ".",
    "paths": {
      "@": ["dist-dev/index"],
      "@/*": ["dist-dev/*"],

      "@advice": ["dist-dev/advice/index.ts"],
      "@advice/*": ["dist-dev/advice/*"],

      "@basic": ["dist-dev/basic/index.ts"],
      "@basic/*": ["dist-dev/basic/*"],

      "@client": ["dist-dev/client/index.ts"],
      "@client/*": ["dist-dev/client/*"],

      "@Token": ["dist-dev/Token/index.ts"],
      "@Token/*": ["dist-dev/Token/*"],

      "@Tokenizer": ["dist-dev/Tokenizer/index.ts"],
      "@Tokenizer/*": ["dist-dev/Tokenizer/*"],

      "@user-helpers": ["dist-dev/user-helpers/index.ts"],
      "@user-helpers/*": ["dist-dev/user-helpers/*"]
    }
  }
}
