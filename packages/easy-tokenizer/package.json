{
  "name": "easy-tokenizer",
  "version": "1.0.6",
  "description": "A simple powerful tokenizer.",
  "main": "index.cjs",
  "files": [
    "index.*",
    "basic.*",
    "client.*",
    "user-helpers.*",
    "dist-dev/"
  ],
  "exports": {
    ".": {
      "require": "./index.cjs",
      "import": "./index.mjs",
      "default": "./index.js"
    },
    "./basic": {
      "require": "./basic.cjs",
      "import": "./basic.mjs",
      "default": "./basic.js"
    },
    "./user-helpers": {
      "require": "./user-helpers.cjs",
      "import": "./user-helpers.mjs",
      "default": "./user-helpers.js"
    },
    "./client": {
      "require": "./client.cjs",
      "import": "./client.mjs",
      "default": "./client.js"
    },
    "./*": "./*"
  },
  "scripts": {
    "build:clear": "rm -rf ./dist-dev",
    "build:fix": "mv ./dist-dev/src/* ./dist-dev/ && rm -rf ./dist-dev/src/ && npm run use-swc && npx ef-tspm --tsconfig ./tsconfig.build.json ",
    "build:build": "tsc -p ./tsconfig.build.json && npm run inter:all-exports",
    "build": "npm run build:clear && npm run build:build && npm run build:fix",
    "test": "ts-mocha -p ./tsconfig.build.json --paths test/**/*.ts --exclude test/**/_*.ts",
    "test:unit": "ts-mocha -p ./tsconfig.build.json --paths src/**/*.test.ts",
    "prepublishOnly": "npm run build",
    "use-swc": "npm run inter:use-swc",
    "inter:tsnode": "ts-node",
    "inter:ex-node": "ts-node -P ./tsconfig.build.json -r tsconfig-paths/register",
    "inter:add-export": "npm run inter:tsnode -- scripts/add-export.ts",
    "inter:all-exports": "npm run inter:tsnode -- scripts/all-exports.ts",
    "inter:use-swc": "npm run inter:tsnode -- scripts/use-swc.ts"
  },
  "author": "Apika Luca",
  "devDependencies": {
    "@ef-carbon/tspm": "^2.2.5",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.206",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "ts-mocha": "^10.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "tslib": "^2.4.0"
  },
  "license": "MIT"
}
